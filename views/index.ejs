<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ferretería: Tasa de Cambio y Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">FerreMas</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="#">Inicio</a>
                <a class="nav-item nav-link" href="#">Productos</a>
                <a class="nav-item nav-link" href="#">Ofertas</a>
                <a class="nav-item nav-link" href="#">Contacto</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h1>Convertir Dólares a Pesos</h1>
                <input type="number" id="value" class="form-control" placeholder="Ingrese el monto en dólares">
                <button class="btn btn-primary mt-2" onclick="convertir()">Convertir</button>
                <p id="resultado" class="mt-2"></p>
            </div>
        </div>

        <h2 class="mt-4 text-center">Productos</h2>
        <div class="row">
            <% productos.forEach(function(producto) { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="<%= producto.img %>" alt="<%= producto.nombre %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= producto.nombre %></h5>
                            <p class="card-text"><%= producto.desc %></p>
                            <p class="card-text">Marca: <%= producto.marca %></p>
                            <p class="card-text">Precio: $<%= producto.precio %></p>
                            <form action="/pagar" method="post">
                                <input type="hidden" name="orden_de_compra" value="<%= producto.id %>">
                                <input type="hidden" name="monto" value="<%= producto.precio %>">
                                <button type="submit" class="btn btn-success">Pagar</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        async function convertir() {
            const value = document.getElementById('value').value;
            if (!value) {
                document.getElementById('resultado').innerText = 'Por favor ingrese un monto para convertir.';
                return;
            }

            // Validaciones en el cliente
            if (isNaN(value)) {
                document.getElementById('resultado').innerText = 'El monto debe ser un número válido.';
                return;
            }
            if (value < 0) {
                document.getElementById('resultado').innerText = 'El monto no puede ser negativo.';
                return;
            }
            if (value > 1000000) {
                document.getElementById('resultado').innerText = 'El monto es demasiado alto para convertir.';
                return;
            }

            try {
                const response = await fetch(`/convertir?monto=${value}`);
                const data = await response.json();
                if (response.ok) {
                    document.getElementById('resultado').innerText = `El resultado de la conversión es: ${data.resultado.toLocaleString('es-ES', { style: 'currency', currency: 'CLP' })}`;
                } else {
                    throw new Error('Failed to fetch');
                }
            } catch (error) {
                document.getElementById('resultado').innerText = 'Error al realizar la conversión.';
            }
        }
    </script>
</body>
</html>
